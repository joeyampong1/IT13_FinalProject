@page "/health-records"
@layout Layout.DashboardLayout

<div class="pm-page">
    <!-- Header reusing the same style as Dashboard/Patient Management -->
    <header class="dashboard-header">
        <div>
            <h1 class="dashboard-title">Health Records</h1>
            <p class="dashboard-subtitle">Welcome back Admin!</p>
        </div>

        <div class="dashboard-user-info">
            <span class="dashboard-user-email">admin@gmail.com</span>
            <div class="dashboard-user-avatar">üë§</div>
            <span class="dashboard-user-name">Admin</span>
        </div>
    </header>

    <!-- ===================== PATIENT RECORDS OVERVIEW ===================== -->
    <section class="pm-overview">
        <div class="pm-overview-header">
            <h2 class="pm-section-title">Patient Records Overview</h2>
            <div class="pm-show-entries">
                <span>Show</span>
                <select>
                    <option>5</option>
                    <option>10</option>
                    <option>25</option>
                </select>
                <span>entries</span>
            </div>
        </div>

        <div class="pm-filters-row">
            <div class="pm-alpha-filter">
                <button class="pm-filter-pill active">All</button>
                @foreach (var letter in Alphabet)
                {
                    <button class="pm-filter-pill">@letter</button>
                }
            </div>

            <div class="pm-search-row">
                <div class="pm-search-box">
                    <span class="pm-search-icon">üîç</span>
                    <input class="pm-search-input" placeholder="Search Client" />
                </div>

                <div class="pm-actions">
                    <button class="activity-action-btn">Sort</button>
                    <button class="activity-action-btn">Filters</button>
                </div>
            </div>
        </div>

        <div class="pm-table-outer">
            <div class="pm-table-wrapper">
                <table class="pm-table">
                    <thead>
                        <tr>
                            <th class="pm-col-id">ID</th>
                            <th>Patient Name<br /><span class="pm-subcol">Email</span></th>
                            <th>Doctor's Name<br /><span class="pm-subcol">Email</span></th>
                            <th>Nurse Assist<br /><span class="pm-subcol">Email</span></th>
                            <th class="pm-col-date">Date of Check-up</th>
                            <th class="pm-col-status">Visit Status</th>
                            <th class="pm-col-action">More Info</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Records)
                        {
                            <tr>
                                <td class="pm-col-id">@r.Id</td>
                                <td>
                                    <div class="pm-patient-name">@r.PatientName</div>
                                    <div class="pm-patient-email">@r.PatientEmail</div>
                                </td>
                                <td>
                                    <div class="pm-patient-name">@r.DoctorName</div>
                                    <div class="pm-patient-email">@r.DoctorEmail</div>
                                </td>
                                <td>
                                    <div class="pm-patient-name">@r.NurseName</div>
                                    <div class="pm-patient-email">@r.NurseEmail</div>
                                </td>
                                <td class="pm-col-date">@r.DateOfCheckup</td>
                                <td class="pm-col-status">@r.VisitStatus</td>
                                <td class="pm-col-action">
                                    <button class="pm-view-btn" @onclick="() => ViewRecord(r)">View</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="pm-pagination">
            <button class="pm-page-btn">Previous</button>
            <button class="pm-page-number active">1</button>
            <button class="pm-page-number">2</button>
            <button class="pm-page-number">3</button>
            <span class="pm-page-dots">...</span>
            <button class="pm-page-number">8</button>
            <button class="pm-page-btn">Next</button>
        </div>
    </section>
</div>

