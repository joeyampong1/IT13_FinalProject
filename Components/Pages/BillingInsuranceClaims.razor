@page "/billing-insurance-claims"
@layout Layout.DashboardLayout

<div class="inv-page">
    <header class="dashboard-header">
        <div>
            <h1 class="dashboard-title">Insurance and Claims</h1>
            <p class="dashboard-subtitle">Welcome back Billing Staff!</p>
        </div>

        <div class="dashboard-user-info">
            <span class="dashboard-user-email">billing@gmail.com</span>
            <div class="dashboard-user-avatar">üë§</div>
            <span class="dashboard-user-name">Billing staff</span>
        </div>
    </header>

    <section class="inv-card">
        <div class="inv-controls">
            <h2 class="inv-section-title">Insurance Process</h2>

            <div class="inv-tabs-row">
                <span class="inv-tabs-label">Recent</span>
                <div class="inv-tabs">
                    <button class="inv-tab inv-tab-active">Overview</button>
                    <button class="inv-tab" @onclick="GoToRequest">Request</button>
                </div>
            </div>

            <div class="inv-search-row">
                <div class="inv-search-box">
                    <span class="inv-search-icon"></span>
                    <input class="inv-search-input" placeholder="Search Name" />
                </div>

                <div class="inv-actions">
                    <button class="inv-action-btn">Sort</button>
                    <button class="inv-action-btn">Filters</button>
                </div>
            </div>
        </div>

        <div class="inv-list">
            @foreach (var item in InsuranceItems)
            {
                <div class="inv-row">
                    <div class="inv-row-main">
                        <div class="inv-row-name">
                            <span class="inv-row-label">Name</span>
                            <span class="inv-row-value">@item.Name</span>
                        </div>
                    </div>
                    <div class="inv-row-columns">
                        <div class="inv-row-col">
                            <span class="inv-row-label">Insurance</span>
                            <span class="inv-row-value">@item.Insurance</span>
                        </div>
                        <div class="inv-row-col">
                            <span class="inv-row-label">Date</span>
                            <span class="inv-row-value">@item.Date</span>
                        </div>
                        <div class="inv-row-col">
                            <span class="inv-row-label">Status</span>
                            <span class="inv-row-value">@item.Status</span>
                        </div>
                        <div class="inv-row-col inv-row-col-action">
                            <button class="inv-view-btn" type="button" aria-label="View insurance claim" @onclick="() => OpenViewPanel(item)">
                                <span class="inv-view-icon"></span>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (IsViewPanelOpen && SelectedRow is not null)
        {
            <div class="inv-view-overlay">
                <div class="inv-view-panel">
                    <h3 class="inv-view-title">Insurance Request Form</h3>
                    <div class="inv-view-subtitle">Insurance Approved</div>

                    <div class="inv-view-section">
                        <div class="inv-view-section-title">Patient Information</div>
                        <div class="inv-view-grid">
                            <div>
                                <div class="inv-view-label">Name:</div>
                                <div class="inv-view-value">@SelectedRow.Name</div>
                            </div>
                            <div>
                                <div class="inv-view-label">Patient ID:</div>
                                <div class="inv-view-value">#001234</div>
                            </div>
                            <div>
                                <div class="inv-view-label">Insurance:</div>
                                <div class="inv-view-value">@SelectedRow.Insurance</div>
                            </div>
                            <div>
                                <div class="inv-view-label">Date:</div>
                                <div class="inv-view-value">@SelectedRow.Date</div>
                            </div>
                        </div>
                    </div>

                    <div class="inv-view-section">
                        <div class="inv-view-section-title">Claim Details</div>
                        <table class="inv-view-table">
                            <thead>
                                <tr>
                                    <th>Service</th>
                                    <th>Amount</th>
                                    <th>Coverable</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Consultation</td>
                                    <td>‚Ç±500</td>
                                    <td>‚Ç±250 (50%)</td>
                                </tr>
                                <tr>
                                    <td>Blood Test</td>
                                    <td>‚Ç±300</td>
                                    <td>‚Ç±150 (50%)</td>
                                </tr>
                                <tr>
                                    <td>Urinalysis</td>
                                    <td>‚Ç±250</td>
                                    <td>‚Ç±125 (50%)</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="inv-view-total-row">
                            <span class="inv-view-label">Total Coverable:</span>
                            <span class="inv-view-value">‚Ç±525</span>
                        </div>
                    </div>

                    <div class="inv-view-doc-list">
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Medical Certificate</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye">üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Laboratory Results</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye">üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Prescription Copies</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye">üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Eligibility Verification</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye">üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Claim Form</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye">üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Official Receipt/Invoice</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye">üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Patient Information Sheet</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye">üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Valid ID Copies</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye">üëÅ</button>
                        </div>
                    </div>

                    <div class="inv-view-footer">
                        <button type="button" class="inv-view-close" @onclick="CloseViewPanel">Close</button>
                    </div>
                </div>
            </div>
        }

        <button type="button" class="inv-pagination-toggle" @onclick="TogglePagination" aria-label="Hide or show page buttons">
            <span>@(ShowPagination ? "‚Ä∫" : "‚Äπ")</span>
        </button>

        @if (ShowPagination)
        {
            <div class="inv-pagination">
                <button class="inv-page-btn">Previous</button>
                <button class="inv-page-number inv-page-number-active">1</button>
                <button class="inv-page-number">2</button>
                <button class="inv-page-number">3</button>
                <span class="inv-page-dots">...</span>
                <button class="inv-page-number">8</button>
                <button class="inv-page-btn">Next</button>
            </div>
        }
    </section>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    private record InsuranceRow(string Name, string Insurance, string Date, string Status);

    private readonly InsuranceRow[] InsuranceItems = new InsuranceRow[]
    {
        new("Himeko Murata", "PhilHealth", "03/09/24", "Pending"),
        new("Yae Miko", "GSIS / SSS Health Benefit", "03/03/24", "Pending"),
        new("Black Swan", "Medicare", "03/06/24", "Pending"),
        new("Ruan Mei", "Kaiser Health", "03/07/24", "Pending"),
        new("Bronya Rand", "PhilCare", "03/01/24", "Pending"),
    };

    private bool ShowPagination { get; set; } = true;

    private InsuranceRow? SelectedRow { get; set; }

    private bool IsViewPanelOpen { get; set; }

    private void TogglePagination()
    {
        ShowPagination = !ShowPagination;
    }

    private void GoToRequest() => Navigation.NavigateTo("/billing-insurance-request");

    private void OpenViewPanel(InsuranceRow row)
    {
        SelectedRow = row;
        IsViewPanelOpen = true;
    }

    private void CloseViewPanel()
    {
        IsViewPanelOpen = false;
    }
}
